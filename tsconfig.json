{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./lib",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*", "index.d.ts"
  ]
}
